DL = nil
if sys.system() == "Linux" then
	DL = ExternalLibrary( "dl" )
end

lib = Library( "gl",
	"gl3w.c",
	"api.cpp",
	"texture.cpp",
	"shader.cpp",
	"program.cpp",
	"framebuffer.cpp",
	"matrix4.cpp",
	"versor.cpp",
	"color.cpp",
	"check.cpp",
	"vertex_buffer.cpp",
	"index_buffer.cpp",
	"vertex_array.cpp",
	"png_image.cpp",
	"mesh.cpp",
	UseLibraries( "base" ),
	GL, PNG, DL )
