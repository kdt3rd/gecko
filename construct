

BuildConfiguration{ name="Release", optimization="heavy" }
BuildConfiguration{ name="Build", optimization="optdebug" }
BuildConfiguration{ name="Debug", optimization="debug" }
--BuildConfiguration{ name="Win64", opt="optimize", toolset="cross" }
DefaultConfiguration( "Build" )

if sys.system() == "Linux" then
	X11 = ExternalLibrary( "x11" )
	if X11 == nil then
		error( "X11 library required" )
	end

	PNG = ExternalLibrary( "libpng" )
	if PNG == nil then
		error( "png library required" )
	end

	FREETYPE = ExternalLibrary( "freetype2" )
	if FREETYPE == nil then
		error( "Freetype library required" )
	end

	FONTCONFIG = ExternalLibrary( "fontconfig" )
	if FONTCONFIG == nil then
		error( "fontconfig library required" )
	end

	GL = ExternalLibrary( "gl" )
	if GL == nil then
		error( "OpenGL library required" )
	end
end

EnableLanguages( "c++11" )
SetOption( "threads", "on" )
Include( "libs" )

libs = SubDir( "libs" )
apps = SubDir( "apps" )
